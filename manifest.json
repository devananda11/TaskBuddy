{
    "manifest_version": 3,
    "name": "TaskBuddy",
    "version": "1.0",
    "description": "A Chrome extension version of the TaskTrackr app.",
    "action": {
      "default_popup": "index.html",
      "default_icon": "logo.png"  
    },
    "permissions": ["storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"]
      }
    ],
    "icons": {
      "16": "logo.png",  
      "48": "logo.png",  
      "128": "logo.png" 
    }
  }
  